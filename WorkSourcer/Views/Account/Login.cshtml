@model WorkSourcer.AuthPer.UserLogin
@{
    ViewData["Title"] = "Вход";
    Layout = "_Layout";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-md-offset-3 well">
            <h3 class="text-center">Вход</h3>

            <form asp-action="Login" asp-antiforgery="true">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <input type="hidden" asp-for="ReturnUrl" />

                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="LoginProp" class="form-control" placeholder="Логин" />
                    </div>
                </div>

                <div class="col-xs-12">
                    <div class="form-group">
                        <input asp-for="Password" class="form-control" placeholder="Пароль" />
                    </div>
                </div> 
                <div class="text-center col-xs-12">
                    <button type="submit" class="btn btn-primary">Войти</button>
                    <a class="btn btn-primary" href="/Account/Register">Регистрация </a>
                </div>
            </form>

        </div>
    </div>
</div>

